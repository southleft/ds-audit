{
  "name": "dsaudit",
  "version": "0.1.0",
  "description": "CLI-based auditing tool for evaluating design system health, structure, and completeness",
  "main": "dist/index.js",
  "bin": {
    "dsaudit": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src/dashboard/dashboard-template.html",
    "src/dashboard/dashboard.js",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dsaudit.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/dsaudit/issues"
  },
  "homepage": "https://github.com/yourusername/dsaudit#readme",
  "scripts": {
    "build": "tsc && npm run build:dashboard",
    "build:dashboard": "vite build",
    "copy-assets": "cp -r src/dashboard/*.html src/dashboard/*.js dist/dashboard/",
    "dev": "tsx watch src/cli.ts",
    "dev:dashboard": "vite",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json}'",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "design-system",
    "audit",
    "cli",
    "component-library",
    "design-tokens"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@types/express": "^5.0.3",
    "@types/html2canvas": "^0.5.35",
    "@types/jspdf": "^1.3.3",
    "axe-core": "^4.10.3",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "chart.js": "^4.5.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "html2canvas": "^1.4.1",
    "inquirer": "^12.7.0",
    "jspdf": "^3.0.1",
    "lighthouse": "^12.8.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  }
}
